extends layout

block content
 .container
  form(method="post", action="contact/send")
   h1 Contect
   .form-group
    label Name
    input.form-control(type="text", name="name", placeholder="Enter a Name")
   .form-group
    label Email
    input.form-control(type="email", name="email", placeholder="Enter your email")
   .form-group
    label Message
    textarea.form-control(name="message", placeholder="Enter a message")
   button.btn.btn-primary(type="submit") submit